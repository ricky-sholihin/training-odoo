<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_sale" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='require_signature']" position="attributes">
                <attribute name="widget">boolean_toggle</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="widget">date</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="set_qty" type="object" string="Set Quantity" />
            </xpath>
        </field>
    </record>

</odoo>
